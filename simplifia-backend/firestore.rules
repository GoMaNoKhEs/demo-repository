rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Fonctions helper
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Collection users
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Collection processes
    match /processes/{processId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid ||
                      resource.data.sessionId != null);
      allow create: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
                               (resource.data.userId == request.auth.uid ||
                                resource.data.sessionId != null);

      // Sous-collection chat_messages
      match /chat_messages/{messageId} {
        allow read, create: if isAuthenticated();
      }

      // Sous-collection activity_logs
      match /activity_logs/{logId} {
        allow read, create: if isAuthenticated();
      }
    }

    // Collection messages (pour le chat en temps réel)
    match /messages/{messageId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Collection activity_logs (globale)
    match /activity_logs/{logId} {
      allow read, create: if isAuthenticated();
    }

    // Collection config (lecture seule)
    match /config/{configId} {
      allow read: if isAuthenticated();
    }

    // Deny all par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}